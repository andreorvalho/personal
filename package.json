{
  "name": "app",
  "private": "true",
  "dependencies": {
    "@popperjs/core": "^2.11.8",
    "@uiw/react-md-editor": "^4.0.4",
    "autoprefixer": "^10.4.16",
    "bootstrap": "^5.3.2",
    "bootstrap-icons": "^1.11.1",
    "esbuild": "^0.19.5",
    "nodemon": "^3.0.1",
    "postcss": "^8.4.31",
    "postcss-cli": "^10.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^9.0.1",
    "react-markdown-it": "^1.0.2",
    "sass": "^1.69.5",
    "turndown": "^7.1.3"
  },
  "scripts": {
    "build": "esbuild app/javascript/application.js app/javascript/components/home/entry.js app/javascript/components/notes/index/entry.js app/javascript/components/notes/new/entry.jsx --bundle --sourcemap --outdir=app/assets/builds --public-path=/assets",
    "build:css:compile": "sass ./app/assets/stylesheets/application.bootstrap.scss:./app/assets/builds/application.css ./app/javascript/components/notes/new/new.scss:./app/assets/builds/new.css --no-source-map --load-path=node_modules",
    "build:css:prefix": "postcss ./app/assets/builds/application.css ./app/assets/builds/new.css --replace  --use=autoprefixer",
    "build:css": "yarn build:css:compile && yarn build:css:prefix",
    "watch:css": "nodemon --watch ./app/assets/stylesheets/ --watch ./app/javascript/ --ext scss --exec \"yarn build:css\""
  },
  "browserslist": [
    "defaults"
  ]
}
